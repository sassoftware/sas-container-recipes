    # -i ${SASINSTANCE}"
/etc/init.d/sas-viya-sasstudio-default start

# TODO: Run CONNECT Server if present
if [ -f "/etc/init.d/sas-viya-connect-default" ]; then
    /etc/init.d/sas-viya-connect-default start
fi

###############################################################################
# Keep the container alive until it is killed
###############################################################################

# TODO: Need to add CONNECT
pidfiles="/var/run/sas/sas-viya-sasstudio-default.pid /var/run/sas/sas-viya-spawner-default.pid"
while :; do
    sleep 3
    for _pidf in ${pidfiles}; do
        if [ -f ${_pidf} ]; then
            SERVICE_PID=$(cat ${_pidf})
            set +e
            ps -p ${SERVICE_PID} | grep -q ${SERVICE_PID} 2>/dev/null
            process_check_rc=$?
            set -e
            if (( ${process_check_rc} != 0 )); then
                echo;
                echo "Process is not running..."
                echo "    File = ${_pidf}";
                echo "    PID = ${SERVICE_PID}";
                gracefulshutdown
            fi
        else
            echo; echo "PID file not found: ${_pidf}"; echo
            gracefulshutdown
        fi
    done
done

